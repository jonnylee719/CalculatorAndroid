<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simplea.jonnylee.calculator.CalViewFragment"
    android:orientation="vertical"
    >

    <HorizontalScrollView
        android:id="@+id/equationHorizontalScrollView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:weightSum = "1"
        android:fillViewport="true"
        android:scrollbars="none">

        <TextView
            android:id="@+id/lastEquatView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:gravity="right|bottom"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:onClick="openCalHistoryFragment"
        />
    </HorizontalScrollView>

    <!-- for margin can be 5dp -->
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_margin="5dp"
        android:scrollbars="none">

        <TextView
            android:id="@+id/displayView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="0"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"

            android:gravity="right|bottom" />
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight=".75">
        
        <LinearLayout
            android:id="@+id/butLayer1"
            android:layout_width="@dimen/butLayerWidth"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentLeft="true">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:background="@color/cyan_dark"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="numButClicked"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="numButClicked"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="numButClicked"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="dpButClicked"
                android:singleLine="false" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/butLayer2"
            android:layout_width="@dimen/butLayerWidth"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/butLayer1"
            android:background="@color/cyan_dark">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:background="@color/cyan_dark"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="numButClicked"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="numButClicked"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="numButClicked"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="numButClicked"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/butLayer3"
            android:layout_width="@dimen/butLayerWidth"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/butLayer2"
            android:background="@color/cyan_dark">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+/-"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="negButClicked"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="numButClicked"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="numButClicked"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="numButClicked"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="equalButClicked"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/butLayer4"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/butLayer3"
            android:layout_toEndOf="@id/butLayer3"
            android:layout_alignParentRight="true"
            android:background="@color/cyan_dark"
            >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="operButClicked"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="operButClicked"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="operButClicked"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="operButClicked"
                android:singleLine="false" />

            <Button
                android:id="@+id/delBut"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="DEL"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/cyan_dark"
                android:onClick="cancelButClicked"
                android:longClickable="true" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
